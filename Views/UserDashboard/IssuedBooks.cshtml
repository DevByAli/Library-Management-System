@using LMS
@model List<Book>

@{
    Layout = "_userLayout";
}
<html>
    <head>
        <title>Issued Books</title>
        <link rel="stylesheet" href="/css/home.css">
    </head>
    <body>
        @if(@Model.Count==0)
        {
            <h1>No Record!</h1>
        }
        else
        {
            <div class="table-div">
                <table>
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Author</th>
                            <th>IBAN</th>
                        </tr>
                    </thead>
                    @foreach(Book book in Model)
                    {
                        <tr class="table-inner-row">
                            <td>@book.Name</td>
                            <td>@book.Author</td>
                            <td>@book.Iban</td>
                            <td>
                                <form action="/UserDashboard/IssuedBooks" method="post">
                                    <input type="hidden" name="Iban" value="@book.Iban" />
                                    <button class="Edit-button" type="submit">Return</button>
                                </form>
                            </td>
                        </tr>
                    }
                </table>
            </div>
        }
</body>
</html>