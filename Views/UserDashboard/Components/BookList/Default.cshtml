@using LMS
@model List<Book>

@{
    Layout = "_userLayout";
}

<html>
    <head>
        <title>Dashboard</title>
        <link rel="stylesheet" href="/css/home.css">
    </head> 
    <body>
        @if(@Model.Count==0)
        {
            <h1>No Record!</h1>
        }
        else
        {
            <div style="display:flex; justify-content:center; align-item:center;" 
                asp-validation-summary="All"></div>
            <div class="table-div">
                <table>
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Author</th>
                            <th>IBAN</th>
                        </tr>
                    </thead>
                    <partial name="_MyPartialView" model="Model"/>
                </table>
            </div>
        }
</body>
</html>