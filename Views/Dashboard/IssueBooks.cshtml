@using LMS
@model List<IssuedBook>

<!DOCTYPE html>
<html>
    <head>
        <title>Issued Books</title>
        <link rel="stylesheet" href="/css/home.css">
    </head>
    <body>
        @if(Model.Count == 0)
        {
            <h1>No Book Issue</h1>
        }
        else
        {
            <div class="table-div">
                <table>
                    <thead>
                        <tr>
                            <th>User Id</th>
                            <th>IBAN</th>
                            <th>Date</th>
                        </tr>
                    </thead>

                    @foreach(var issueBook in Model)
                    {
                        <tr class="table-inner-row">
                            <td>@issueBook.UserId</td>
                            <td>@issueBook.Iban</td>
                            <td>@issueBook.IssuedDate</td>
                        </tr>
                    }
                </table>
            </div>
        }
    </body>
</html>